<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/readerRow"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/cover_margin_top">

    <org.acreglise.theseed.ui.TheSeedTextView
        android:id="@+id/paragraph_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/pp_num_size"
        android:textColor="#a0a3a7"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <org.acreglise.theseed.ui.TheSeedTextView
        android:id="@+id/paragraph_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_txt_size"
        android:textColor="@android:color/black"/>

</LinearLayout>